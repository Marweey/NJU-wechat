/* pages/clock/clock.wxss */
.container{
  display: flex; /* 使用flex布局 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}
.slider {
  flex: auto;
  width: 650rpx;
  margin: 40rpx auto;
  padding-top: 15rpx;
}
.input_container {
  flex: auto; /* 输入框占据剩余空间 */
  width: 60rpx;
  margin-right: 40rpx;
  padding-top: 15rpx;
}
.input_box {
  width: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx ;
}
.task_text {
  height: 200rpx;
  margin: 40rpx auto;
  text-align: center;
}
.task_text .task_title{
  font-size: 35rpx;
  height: 120rpx;
  line-height: 120rpx;
}
.task_text .task_desc{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #999999;
}
.task_cate {
  width: 660rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}
.task_cate .cate_item {
  width: 220rpx;
  height: 130rpx;
  text-align: center;
  margin-bottom: 50rpx;
  position: relative; /* 添加这一行 */
}
.task_cate .cate_item .cate_icon {
  height: 70rpx;
}
.task_cate .cate_item .cate_icon image {
  width: 50rpx;
  height: 50rpx;
}
.task_cate .cate_item .cate_text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.task_cate .cate_item.selected .cate_text {
  color: #ffffff; /* 选中时的颜色 */
}
/* Invert icon color for selected category */
.task_cate .cate_item.selected .cate_icon image {
  filter: invert(1);
}
.task_cate .cate_item.selected {
  background-color: #E7624F;
}
.task_cate .cate_item.selected::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%; /* 修改宽度 */
  height: 120%; /* 修改高度 */
  background-color: #E7624F;
  border-radius: 10rpx; /* 圆角半径，根据需求调整 */
  z-index: -1;
}

.start {
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 40rpx auto;
  border: 2rpx solid #E7624F;
  color: #E7624F;
  border-radius: 20rpx;
}
.logs {
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 40rpx auto;
  border: 2rpx solid #E7624F;
  color: #E7624F;
  border-radius: 20rpx;
}
.clock {
  overflow: hidden;
  background: #E7624F;
}
.progress {
  width: 400rpx;
  height: 400rpx;
  margin: 140rpx auto;
  position: relative;
}
.progress .progress_bg, .progress .progress_active  {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}
.progress .progress_text{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #ffffff;
  text-align: center;
  position: absolute;
  left: 120rpx;
  top: 170rpx;
}
.btns .okBtn, .btns .pauseBtn, .btns .continueBtn, .btns .cancelBtn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  border: 3rpx solid #ffffff;
  border-radius: 20rpx;
  margin: 0 auto 20rpx auto;
}
.sum {
  display: flex;
  width: 750rpx;
  height: 250rpx;
  padding-bottom: 40rpx;
  border-bottom: 3rpx solid #eeeeee;
}
.sum .sum_item {
  width: 375rpx;
  height: 160rpx;
  text-align: center;
}
.sum .sum_item .sum_item_title {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #6B747E;
}
.sum .sum_item .sum_item_val {
  height: 40rpx;
  line-height: 40rpx;
  color: #E7624F;
}
.detail {
  width: 700rpx;
  margin: 0 auto;
}
.list_item {
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  padding-top: 15rpx;
}
.list_item .list_item_date {
  width: 300rpx;
  font-size: 30rpx;
  text-align: center;
}
.list_item .list_item_cate {
  width: 200rpx;
  font-size: 30rpx;
  text-align: center;
}
.list_item .list_item_duration {
  width: 200rpx;
  font-size: 30rpx;
  text-align: right;
}